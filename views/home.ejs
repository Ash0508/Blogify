<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* Ensure that images do not overflow their container */
    .card-img-top {
      height: 180px; /* Adjust this value as needed to control image size */
      object-fit: cover; /* Ensures the image covers the area without distortion */
    }

    /* Add spacing between cards */
    .g-4 {
      gap: 1.5rem; /* Adjust this value for the desired spacing between cards */
    }
  </style>

    <div class="container mt-3">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card col" style="width: 100%;">
            <img src="<%= blog.coverImageURL %>" class="card-img-top img-fluid" alt="<%= blog.title %>"/>
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
